extend layout

block content
    h1= title

    div.list-group
        each author in authorList
            a(href=author.url, class="list-group-item")
                strong= author.fullName
                span  (#{author.dateOfBirthFormatted} - #{author.dateOfDeath ? author.dateOfDeathFormatted : ''})
        else
            div.list-group-item There are no authors
    a.btn.btn-success(href="/catalog/author/create") 
        i.fa.fa-plus-circle
        span  Create a new author